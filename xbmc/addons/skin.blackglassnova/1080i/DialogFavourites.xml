<?xml version="1.0" encoding="utf-8"?>
<window type="window">
    <defaultcontrol always="true">450</defaultcontrol>
    <include>OpenClose</include>
    <controls>
        <include>Fanart_Art</include>
        <include>Player_Show</include>
        <include>Time</include>
        <control type="label">
            <include>WindowTitle</include>
            <label>$LOCALIZE[1036]</label>
        </control>
        <control type="label">
            <include>WindowTitleSub</include>
            <label>$VAR[GlobalSubTitles]</label>
        </control>
        <control type="image">
            <posx>-150</posx>
            <posy>94</posy>
            <width>2258</width>
            <height>1160</height>
            <texture border="90">common/bg_tvguide.png</texture>
        </control>
        <control type="group" description="Grid view">
            <control type="panel" id="450" description="Grid">
                <posx>30</posx>
                <posy>150</posy>
                <width>1890</width>
                <height>900</height>
                <orientation>vertical</orientation>
                <onleft>450</onleft>
                <onright>450</onright>
                <onup>450</onup>
                <ondown>450</ondown>
                <preloaditems>4</preloaditems>
                <pagecontrol>60</pagecontrol>
                <scrolltime>400</scrolltime>
                <itemlayout height="300" width="267">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>253</width>
                        <height>253</height>
                        <include>SquareThumb</include>
                        <include>ThumbBorder</include>
                    </control>
                    <control type="label">
                        <posx>127</posx>
                        <posy>225</posy>
                        <width>200</width>
                        <height>70</height>
                        <align>center</align>
                        <textcolor>ListFocusColor</textcolor>
                        <font>FacadePanelFont</font>
                        <scroll>false</scroll>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="300" width="267">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>253</width>
                        <height>253</height>
                        <include>SquareThumb</include>
                        <include>ThumbBorderOverlay</include>
                    </control>
                    <control type="label">
                        <posx>127</posx>
                        <posy>225</posy>
                        <width>200</width>
                        <height>70</height>
                        <align>center</align>
                        <textcolor>ListFocusColor</textcolor>
                        <font>FacadePanelFont</font>
                        <scroll>false</scroll>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="60">
                <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
                <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
                <posx>1899</posx>
                <posy>150</posy>
                <height>900</height>
                <include>VerticalScroller</include>
                <onleft>53</onleft>
                <onright>9000</onright>
            </control>
        </control>
    </controls>
</window>
