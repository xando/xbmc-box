<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <zorder>2</zorder>
    <controls>
        <control type="group" description="Content">
            <animation effect="slide" start="0,-130" end="0,0" time="200">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,-130" time="200">WindowClose</animation>
            <posy>0</posy>
            <control type="image">
                <posx>590</posx>
                <posy>-290</posy>
                <width>700</width>
                <height>417</height>
                <texture border="90">common/bg_dialog.png</texture>
            </control>
            <control type="progress" id="32" description="Progress bar">
                <posx>0</posx>
                <posy>-27</posy>
                <width>1920</width>
                <height>48</height>
                <texturebg>-</texturebg>
                <midtexture>-</midtexture>
                <righttexture>-</righttexture>
                <lefttexture>-</lefttexture>
                <colordiffuse>90ffffff</colordiffuse>
            </control>
            <control type="label" id="30" description="Header Label">
                <posx>810</posx>
                <posy>-3</posy>
                <width>410</width>
                <height>46</height>
                <font>NotificationFont</font>
                <align>left</align>
                <textcolor>MainColor</textcolor>
            </control>
            <control type="label" id="31" description="Current Directory Label">
                <posx>810</posx>
                <posy>29</posy>
                <width>410</width>
                <height>46</height>
                <font>NotificationFont</font>
                <align>left</align>
                <haspath>true</haspath>
                <textcolor>AlternateColor</textcolor>
            </control>
            <control type="label" id="1" description="Separator">
                <posx>670</posx>
                <posy>0</posy>
                <width>200</width>
                <height>74</height>
                <align>left</align>
                <font>InfoTitleFont</font>
                <label>$INFO[Control.GetLabel(32),,%]</label>
                <textcolor>MainColor</textcolor>
            </control>
        </control>
    </controls>
</window>
