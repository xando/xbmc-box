<?xml version="1.0" encoding="utf-8"?>
<includes>
    <variable name="videocodec">
        <value condition="[substring(ListItem.VideoCodec,div,left) | stringcompare(ListItem.VideoCodec,dx50)]">divx</value>
        <value>$INFO[ListItem.VideoCodec]</value>
    </variable>
    <variable name="videocodecOSD">
        <value condition="[substring(VideoPlayer.VideoCodec,div,left) | stringcompare(VideoPlayer.VideoCodec,dx50)]">divx</value>
        <value>$INFO[VideoPlayer.VideoCodec]</value>
    </variable>
    <include name="Codecs">
        <control type="image">
            <description>Video rez Image</description>
            <width>120</width>
            <height>80</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[ListItem.VideoResolution,badges/video/,.png]</texture>
        </control>
        <control type="image">
            <description>Codec Image</description>
            <width>120</width>
            <height>80</height>
            <aspectratio>keep</aspectratio>
            <texture>$VAR[videocodec,badges/video/,.png]</texture>
        </control>
        <control type="image">
            <description>Audio Codec Image</description>
            <width>120</width>
            <height>80</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[ListItem.AudioChannels,badges/audio/,.png]</texture>
        </control>
        <control type="image">
            <description>Audio Codec Image</description>
            <width>120</width>
            <height>80</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[ListItem.AudioCodec,badges/audio/,.png]</texture>
        </control>
    </include>
    <include name="CodecsVideoOSD">
        <control type="image">
            <description>Video rez Image</description>
            <width>100</width>
            <height>70</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[VideoPlayer.VideoResolution,badges/video/,.png]</texture>
        </control>
        <control type="image">
            <description>Codec Image</description>
            <width>100</width>
            <height>70</height>
            <aspectratio>keep</aspectratio>
            <texture>$VAR[videocodecOSD,badges/video/,.png]</texture>
        </control>
        <control type="image">
            <description>Audio Codec Image</description>
            <width>100</width>
            <height>70</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[VideoPlayer.AudioChannels,badges/audio/,.png]</texture>
        </control>
        <control type="image">
            <description>Audio Codec Image</description>
            <width>100</width>
            <height>70</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[VideoPlayer.AudioCodec,badges/audio/,.png]</texture>
        </control>
        <control type="group" id="1">
            <width>100</width>
            <height>70</height>
            <visible>!IsEmpty(VideoPlayer.AudioLanguage)</visible>
            <control type="image" id="1">
                <width>100</width>
                <height>70</height>
                <aspectratio>keep</aspectratio>
                <texture>badges/empty.png</texture>
            </control>
            <control type="image" id="1">
                <posx>7</posx>
                <top>2</top>
                <width>38</width>
                <height>70</height>
                <aspectratio>keep</aspectratio>
                <texture>topbar/topbar_volume_down_focus.png</texture>
            </control>
            <control type="label" id="1">
                <posx>47</posx>
                <top>-2</top>
                <width>45</width>
                <height>70</height>
                <font>BadgeFont</font>
                <align>center</align>
                <label>$INFO[VideoPlayer.AudioLanguage]</label>
                <textcolor>AlternateColor</textcolor>
            </control>
        </control>
        <control type="group" id="1">
            <width>100</width>
            <height>70</height>
            <visible>!IsEmpty(VideoPlayer.SubtitlesLanguage)</visible>
            <control type="image" id="1">
                <width>100</width>
                <height>70</height>
                <aspectratio>keep</aspectratio>
                <texture>badges/empty.png</texture>
            </control>
            <control type="image" id="1">
                <posx>7</posx>
                <top>2</top>
                <width>38</width>
                <height>70</height>
                <aspectratio>keep</aspectratio>
                <texture>topbar/topbar_subtitles_focus.png</texture>
            </control>
            <control type="label" id="1">
                <posx>47</posx>
                <top>-2</top>
                <width>45</width>
                <height>70</height>
                <font>BadgeFont</font>
                <align>center</align>
                <label>$INFO[VideoPlayer.SubtitlesLanguage]</label>
                <textcolor>AlternateColor</textcolor>
            </control>
        </control>
    </include>
    <include name="CodecsMusicOSD">
        <control type="image">
            <description>Audio Codec Image</description>
            <width>100</width>
            <height>70</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[VideoPlayer.AudioChannels,badges/audio/,.png]</texture>
        </control>
        <control type="image">
            <description>Audio Codec Image</description>
            <width>100</width>
            <height>70</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[VideoPlayer.AudioCodec,badges/audio/,.png]</texture>
        </control>
    </include>
</includes>
