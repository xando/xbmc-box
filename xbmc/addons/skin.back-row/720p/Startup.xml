<?xml version="1.0" encoding="utf-8"?>
<window id="2999">
    <onload condition="Skin.HasSetting(Use_Startup_Playlist)">PlayMedia("$INFO[Skin.String(Startup_Playlist_Path)]")</onload>
	<onload>XBMC.AlarmClock(NextAired,XBMC.RunScript(script.tv.show.next.aired,silent=True),00:00:10,silent)</onload>
    <defaultcontrol always="true">10</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="button" id="10">
            <posx>-20</posx>
            <posy>-20</posy>
            <width>1</width>
            <height>1</height>
            <texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <description>Trigger</description>
            <onfocus>Skin.SetBool(Startup)</onfocus>
            <onfocus>SetFocus(11)</onfocus>
        </control>
        <control type="button" id="11">
            <posx>-20</posx>
            <posy>-20</posy>
            <width>1</width>
            <height>1</height>
            <texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <description>Trigger</description>
            <onfocus>ReplaceWindow(Home)</onfocus>
        </control>
        <control type="image">
            <description>Background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture background="true">default.png</texture>
            <animation effect="fade" end="50" time="4000">WindowClose</animation>
            <visible>!Skin.HasSetting(Wallpaper)</visible>
            <visible>!Skin.HasSetting(Default Wallpaper)</visible>
        </control>
        <control type="image">
            <description>Background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture background="true">Left Curtain.png</texture>
            <animation effect="slide" end="-668,0" delay="50" tween="linear" time="4000">WindowClose</animation>
            <visible>!Skin.HasSetting(Wallpaper)</visible>
            <visible>!Skin.HasSetting(Default Wallpaper)</visible>
        </control>
        <control type="image">
            <description>Background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture background="true">right Curtain.png</texture>
            <animation effect="slide" end="658,0" delay="50" tween="linear" time="4000">WindowClose</animation>
            <visible>!Skin.HasSetting(Wallpaper)</visible>
            <visible>!Skin.HasSetting(Default Wallpaper)</visible>
        </control>
        <control type="image">
            <description>Background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture background="true">Dark Mask.png</texture>
            <animation effect="fade" end="50" time="3000">WindowClose</animation>
            <visible>!Skin.HasSetting(Wallpaper)</visible>
            <visible>!Skin.HasSetting(Default Wallpaper)</visible>
        </control>
    </controls>
</window>