<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol>32</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="group">
            <animation effect="fade" time="250">WindowOpen</animation>
            <animation effect="fade" time="400">WindowClose</animation>
            <control type="image">
                <description>Background</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <aspectratio>scale</aspectratio>
                <texture background="true" fallback="TV Guide Wallpaper.jpg">$INFO[Skin.String(CustomTVguide)]</texture>
            </control>
        </control>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="20" end="100" center="640,360" easing="out" tween="back" time="400" />
                <effect type="fade" start="0" end="100" time="400" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="zoom" start="100" end="20" center="640,360" easing="in" tween="back" time="400" />
                <effect type="fade" start="100" end="0" time="500" />
            </animation>
            <control type="group">
                <posy>30</posy>
                <control type="image">
                    <posx>40</posx>
                    <posy>40</posy>
                    <width>1200</width>
                    <height>620</height>
                    <texture>panel.png</texture>
                    <colordiffuse>FFFFFFFF</colordiffuse>
                </control>
                <control type="image">
                    <description>Panel Image</description>
                    <posx>460.20</posx>
                    <posy>-6</posy>
                    <width>354</width>
                    <height>52.50</height>
                    <texture>episode number.png</texture>
                </control>
                <control type="image">
                    <description>Panel Image</description>
                    <posx>460.20</posx>
                    <posy>-6</posy>
                    <width>354</width>
                    <height>52.50</height>
                    <texture>episode number.png</texture>
                </control>
                <control type="label">
                    <posx>65</posx>
                    <posy>8</posy>
                    <width>1150</width>
                    <height>30</height>
                    <font>Home-Heading-S</font>
                    <textcolor>lightblue</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[Control.GetLabel(29)]</label>
                </control>
            </control>
            <control type="label" id="29">
                <description>Empty so we can pass the values up one level</description>
                <visible>False</visible>
            </control>
            <control type="label" id="30">
                <description>Empty so we can pass the values up one level</description>
                <visible>False</visible>
            </control>
            <control type="group">
                <description>Small Media Window</description>
                <posx>540</posx>
                <posy>135</posy>
                <visible>Control.IsVisible(11) | Control.IsVisible(12)</visible>
                <control type="image">
                    <posx>5</posx>
                    <posy>5</posy>
                    <width>622</width>
                    <height>350</height>
                    <texture>tv default.jpg</texture>
                    <bordertexture>background2.png</bordertexture>
                    <bordersize>6</bordersize>
                    <visible>Control.IsVisible(11)</visible>
                    <visible>!Player.HasVideo</visible>
                </control>
                <control type="videowindow">
                    <posx>5</posx>
                    <posy>5</posy>
                    <width>622</width>
                    <height>350</height>
                    <visible>Player.HasVideo</visible>
                </control>
                <control type="label">
                    <description>Current Video label</description>
                    <posx>30</posx>
                    <posy>1</posy>
                    <width>650</width>
                    <height>35</height>
                    <font>font12</font>
                    <textcolor>grey2</textcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[VideoPlayer.Title]</label>
                    <visible>Player.HasVideo</visible>
                </control>
                <control type="image">
                    <posx>5</posx>
                    <posy>5</posy>
                    <width>622</width>
                    <height>350</height>
                    <texture>Now Playing backgroundbr.jpg</texture>
                    <bordertexture>background2.png</bordertexture>
                    <bordersize>6</bordersize>
                    <visible>Control.IsVisible(12)</visible>
                </control>
            </control>
            <control type="group" id="50">
                <include>EPGTimelineView</include>
                <!-- view id = 10 -->
                <include>LiveTVChannelView</include>
                <!-- view id = 11 -->
